                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/background_light"
                        android:background="@drawable/bckg_bluish_days"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:onClick="onTimeUpdate"
                        android:text="06:00"></TextView>
                    <TextView
                        android:id="@+id/tuend"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/background_light"
                        android:background="@drawable/bckg_bluish_days"
                        android:gravity="start|center_vertical"
                        android:textSize="12sp"
                        android:layout_weight="2"
                        android:paddingStart="5sp"
                        android:onClick="onTimeUpdate"
                        android:text="23:00"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/background_light"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:background="@drawable/bckg_gray_days"
                        android:text="Wednesday"></TextView>
                    <TextView
                        android:id="@+id/westart"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/background_light"
                        android:background="@drawable/bckg_gray_days"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:onClick="onTimeUpdate"
                        android:text="06:00"></TextView>
                    <TextView
                        android:id="@+id/weend"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/background_light"
                        android:background="@drawable/bckg_gray_days"
                        android:gravity="start|center_vertical"
                        android:textSize="12sp"
                        android:layout_weight="2"
                        android:paddingStart="5sp"
                        android:onClick="onTimeUpdate"
                        android:text="23:00"></TextView>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/background_light"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:background="@drawable/bckg_bluish_days"
                        android:text="Thursday"></TextView>
                    <TextView
                        android:id="@+id/thstart"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/background_light"
                        android:background="@drawable/bckg_bluish_days"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:onClick="onTimeUpdate"
                        android:text="06:00"></TextView>
                    <TextView
                        android:id="@+id/thend"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/background_light"
                        android:background="@drawable/bckg_bluish_days"
                        android:gravity="start|center_vertical"
                        android:textSize="12sp"
                        android:layout_weight="2"
                        android:paddingStart="5sp"
                        android:onClick="onTimeUpdate"
                        android:text="23:00"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/background_light"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:background="@drawable/bckg_gray_days"
                        android:text="Friday"></TextView>
                    <TextView
                        android:id="@+id/frstart"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/background_light"
                        android:background="@drawable/bckg_gray_days"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:onClick="onTimeUpdate"
                        android:text="06:00"></TextView>
                    <TextView
                        android:id="@+id/frend"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/background_light"
                        android:background="@drawable/bckg_gray_days"
                        android:gravity="start|center_vertical"
                        android:textSize="12sp"
                        android:layout_weight="2"
                        android:paddingStart="5sp"
                        android:onClick="onTimeUpdate"
                        android:text="23:00"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/background_light"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:background="@drawable/bckg_bluish_days"
                        android:text="Saturday"></TextView>
                    <TextView
                        android:id="@+id/sastart"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/background_light"
                        android:background="@drawable/bckg_bluish_days"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:onClick="onTimeUpdate"
                        android:text="06:00"></TextView>
                    <TextView
                        android:id="@+id/saend"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/background_light"
                        android:background="@drawable/bckg_bluish_days"
                        android:gravity="start|center_vertical"
                        android:textSize="12sp"
                        android:layout_weight="2"
                        android:paddingStart="5sp"
                        android:onClick="onTimeUpdate"
                        android:text="23:00"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/background_light"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:background="@drawable/bckg_gray_days"
                        android:text="Sunday"></TextView>
                    <TextView
                        android:id="@+id/sustart"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/background_light"
                        android:background="@drawable/bckg_gray_days"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:onClick="onTimeUpdate"
                        android:text="06:00"></TextView>
                    <TextView
                        android:id="@+id/suend"
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:textColor="@android:color/background_light"
                        android:background="@drawable/bckg_gray_days"
                        android:gravity="start|center_vertical"
                        android:textSize="12sp"
                        android:layout_weight="2"
                        android:paddingStart="5sp"
                        android:onClick="onTimeUpdate"
                        android:text="23:00"></TextView>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/complogo"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:src="@drawable/image8"
                    android:scaleType="fitEnd"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textSize="10sp"
                    android:textColor="@android:color/background_dark"
                    android:gravity="bottom|end"
                    android:layout_weight="3"/>
                <TextView
                    android:id="@+id/unabiz"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:text="© UnaBiz Pte Ltd, 2019."
                    android:textSize="10sp"
                    android:textColor="@android:color/white"
                    android:gravity="bottom|end"
                    android:layout_weight="3"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>